@using ZaBugrom.Managers
@{
    var userData = UserManager.GetCurrentUser();
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/site",
                       "~/Content/themes/base")
        @Scripts.Render("~/bundles/jquery",
                        "~/bundles/jqueryui",
                        "~/bundles/creater",
                        "~/bundles/preparer",
                        "~/bundles/mover",
                        "~/bundles/Shared/_Layout")

    <link rel="SHORTCUT ICON" href="~/Content/images/favicon.ico"/>
    </head>
    <body>
        <header data-event='browser-to-main'>
            <label id="city-name" class="header-opacity"></label>
            <div id="toolbar" class="header-opacity">
                <div id="post-menu">
                    <a>Лента</a>
                    <a>Посты</a>
                    <a>Видеоблоги</a>
                </div>

                <div id="user-menu">
                    @{
                        if (WebSecurity.IsAuthenticated)
                        {
                            <div id="user-div">
                                <a id="user-button">@WebSecurity.CurrentUserName</a>
                                <div id="user-quick-area">
                                    <div id="user-quick-area-left">
                                        <img alt="Аватар" id="avatar" runat="server" title="Ваш аватар" src="@userData.AvatarPath" />
                                        <label id="rating" title="Ваш рейтинг">100</label>
                                    </div>
                                    <div id="user-quick-area-right">
                                        <a href="#myPosts">Мои посты</a>
                                        <a href="#myComments">Мои комментарии</a>
                                        <a href="@Url.Action("ProfileSettings", "Account")">Настройки</a>
                                    </div>
                                </div>
                            </div>
                        <a id="inbox-button">3</a>
                        }
                    }
                    <a id="login-button" href="@Url.Action("Login", "Account")">
                        @{
                            if (!WebSecurity.IsAuthenticated)
                            {
                                <label>Вход</label>
                            }
                        }
                    </a>
                </div>
            </div>
        </header>
        <div id="content">
            @RenderBody()
        </div>
        
        <footer>
            <a>Сообщите о косяке</a>
            <a>О сайте</a>
            <label>&#169 zaburgom.com (жаль домен занят)</label>
        </footer>
    </body>
</html>

