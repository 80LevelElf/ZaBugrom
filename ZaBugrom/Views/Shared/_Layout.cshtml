@using ZaBugrom.Managers
@{
    var userData = UserManager.GetCurrentUser();
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css",
                        "~/Content/themes/base/css")
        @Scripts.Render("~/bundles/jquery",
                        "~/bundles/jqueryui",
                        "~/bundles/jqueryval",
                        "~/bundles/creater",
                        "~/bundles/preparer",
                        "~/bundles/mover",
                        "~/bundles/Shared/_Layout")
    </head>
    <body>
        <header data-event='browser-to-main'>
            <label class="city-name header-opacity"></label>
            <div class="tool-bar header-opacity">
                <div class="post-menu">
                    <a>Лента</a>
                    <a>Посты</a>
                    <a>Видеоблоги</a>
                </div>

                <div class="user-menu">
                    @{
                        if (WebSecurity.IsAuthenticated)
                        {
                            <div class="user-div">
                                <a class="user-button">@WebSecurity.CurrentUserName</a>
                                <a class="inbox-button">3</a>
                                <div class="user-quick-area">
                                    <div class="user-quick-area-left">
                                        <img class="avatar" runat="server" title="Ваш аватар" src="@userData.AvatarPath" />
                                        <label class="rating" title="Ваш рейтинг">100</label>
                                    </div>
                                    <div class="user-quick-area-right">
                                        <a href="#myPosts">Мои посты</a>
                                        <a href="#myComments">Мои комментарии</a>
                                        <a href="@Url.Action("ProfileSettings", "Account")">Настройки</a>
                                    </div>
                                    </div>
                            </div>
                        }
                    }
                    <a class="login-button" href="@Url.Action("Login", "Account")">
                        @{
                            if (!WebSecurity.IsAuthenticated)
                            {
                                <label>Вход</label>
                            }
                        }
                    </a>
                </div>
            </div>
        </header>
        <div class="content">
            @RenderBody()
        </div>
        
        <footer>
            <a>Сообщите о косяке</a>
            <a>О сайте</a>
            <label>&#169 zaburgom.com (жаль домен занят)</label>
        </footer>
    </body>
</html>

