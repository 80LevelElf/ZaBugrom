<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css",
                        "~/Content/themes/base/css")
        @Scripts.Render("~/bundles/jquery",
                        "~/bundles/jqueryui",
                        "~/bundles/jqueryval",
                        "~/bundles/creater",
                        "~/bundles/preparer",
                        "~/bundles/mover")
    </head>
    <body>
        <header data-event="browser-to-main">
            <label class="city-name header-opacity">Токио</label>
            <div class="tool-bar header-opacity">
                <div class="post-menu">
                    <a>Лента</a>
                    <a>Посты</a>
                    <a>Видеоблоги</a>
                    <a>Факты</a>
                </div>

                <div class="user-menu">
                    @{
                        if (WebSecurity.IsAuthenticated)
                        {
                            <a class="user-button">@WebSecurity.CurrentUserName</a>
                            <a class="inbox-button">3</a>
                        }
                    }
                    <a class="login-button" href="@Url.Action("Login", "Account")">
                        @{
                            if (!WebSecurity.IsAuthenticated)
                            {
                                <label>Вход</label>
                            }
                        }
                    </a>
                </div>
            </div>
        </header>
        <div class="content">
            @RenderBody()
        </div>
    </body>
</html>

