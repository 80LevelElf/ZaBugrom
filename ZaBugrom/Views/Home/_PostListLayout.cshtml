@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="left-div">
    <div id="search-div">
        <input id="search-input" type="text" placeholder="Поиск"/>
        <a id="search-button" title="Искать!">></a>
    </div>
    <div id="filter-div">
        <p>
            Страны:
        </p>
        <p>
            <select>
                <option>Все страны</option>
                <option>Мои страны</option>
            </select>
        </p>
        <p>
            Отсортировать по:
        </p>
        <p>
            <select>
                <option>Времени</option>
                <option>Рейтингу</option>
            </select>
        </p>
        <p>
            Не показывать посты с рейтингом ниже:
        </p>
        <p>
            <input type="number" value="-5"/>
        </p>
    </div>
    
    <div id="post-tools-div">
        <input id="refresh" type="submit" value="" title="Обновить посты, используя фильтры"/>
        <a id="add-new-post" title="Добавить новый пост" href="@Url.Action("Index", "AddPost")"></a>
    </div>
</div>

<div id="post-list-div">
    @RenderBody()
</div>

@Scripts.Render("~/bundles/Pages/Home/_PostListLayout", "~/bundles/postManager", "~/bundles/videoManager")
@Styles.Render("~/Content/Pages/Home/_PostListLayout")