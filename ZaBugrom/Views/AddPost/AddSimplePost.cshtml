@model Models.InputModels.AddContent.AddSimplePostInputModel

@{
    ViewBag.Title = "Добавить обычный пост";
    Layout = "~/Views/AddPost/_AddPostLayout.cshtml";
}

<form action="@Url.Action("AddSimplePost")" method="POST">
    <p>
        <label>Заголовок:</label>
    </p>
    <p>
        <input id="Title" name="Title" type="text" placeholder="Заголовок вашего поста" value=""/>
    </p>
    <p>
        Пост:
    </p>
    <p>
        <textarea id="Source" name="Source" placeholder="А тут будет напишите о вашем приключении!=)"></textarea>
    </p>
    <div data-create="dialog-buttons"></div>
</form>

@Styles.Render("~/Content/Pages/AddPost/AddSimplePost")
@Scripts.Render("~/Bundles/Pages/AddPost/AddSimplePost")