@model Models.InputModels.AddContent.AddVideoPostInputModel

@{
    ViewBag.Title = "AddVideoPost";
    Layout = "~/Views/AddPost/_AddPostLayout.cshtml";
}

<form action="@Url.Action("AddVideoPost")" method="POST">
    <p>
        Заголовок:
    </p>
    <p>
        <input id="Title" name="Title" type="text" placeholder="Заголовок вашего поста" value=""/>
    </p>
    <p>
        <label>Теги через запятую (Enter для разделения тегов):</label>
    </p>
    <p>
        <ul id="Tags" name="Tags">
            <li>Видео</li>
        </ul>
    </p>
    <p>
        Ссылка на видео (пока поддерживается только Youtube):
    </p>
    <p>
        <input id="Source" name="Source" type="text" placeholder="Ссылка на видео" value=""/>
    </p>
    <div data-create="dialog-buttons"></div>
</form>

@Styles.Render("~/Content/Pages/AddPost/AddVideoPost")
@Scripts.Render("~/bundles/Pages/AddPost/AddVideoPost")