@model Models.InputModels.Account.LoginInputModel

@{
    ViewBag.Title = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.EnableClientValidation(true);
}

<script src="../../Scripts/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.validate-vsdoc.js" type="text/javascript"></script>

<form class="middle-size" action="@Url.Action("Login")" method="POST">
        <p>@Html.ValidationSummary()</p>
        <p>Логин</p>
        <p> @Html.EditorFor(i => i.Name)</p>
        <p>Пароль</p>
        <p> @Html.EditorFor(i => i.Password)</p>
        <div data-create="dialog-buttons"></div>
        <div data-create="separate-line"></div>
        <p>Так же вы можете <a href="@Url.Action("Register")">зарегистрироваться</a>, если до сих пор этого не сделали.</p>
</form>

