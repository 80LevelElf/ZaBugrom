@model List<Models.Data.MessageData>

@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Account/_ProfileLayout.cshtml";
}

<div id="message-area-div">
    <div id="filter-div">
        <label id="new-content-filter" class="@(ViewBag.Settings.IsNewContent ? "selected" : "") setting-option">Новый контент</label>
        <label class="slash">/</label>
        <label id="nofication-filter" class="@(ViewBag.Settings.IsNotification ? "selected" : "") setting-option">Уведомления</label>
        <label class="slash">/</label>
        <label id="user-mail-filter" class="@(ViewBag.Settings.IsUserMail ? "selected" : "") setting-option">Сообщения от пользователей</label>
    </div>
    <div id="list-div">
        @Html.Action("MessageList", "Element", new { Model })
    </div>
</div>

@Styles.Render("~/Content/Pages/Account/Messages")
@Scripts.Render("~/bundles/Pages/Account/Messages")